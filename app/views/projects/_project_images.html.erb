<%# Full Page image %>
<div class="row">
  <div class="col-12">
    <div class="p-info">
      <h2>Desktop</h2>
      <div class="line-break"></div>
    </div>

    <div class="row">
      <div class="project-img col-12">
        <img
          src="<%= @project.desktop %>"
          class="img-fluid"
          alt="<%= @project.title %> desktop image"
        >
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="p-info">
      <h2>Mobile</h2>
      <div class="line-break"></div>
    </div>

    <div class="row justify-content-center">
      <% @project.mobile.each_with_index do |image, index| %>
        <% alt_tag = index.zero? ? 'image' : 'menu' %>

        <div class="project-img col-sm-6">
          <img
            src="<%= image %>"
            class="img-fluid"
            alt="<%= @project.title %> mobile <%= alt_tag %>"
          >
        </div>
      <% end %>
    </div>
  </div>
</div>
