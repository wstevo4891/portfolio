<%# app/views/project_links.html.erb %>

<% @projects.each do |project| %>

  <div class="col-md-6">
    <div class="project-link">
      <a href="/work/<%= project.slug %>">
        <div style="background-image: url(<%= project.cover %>)"></div>

        <div class="project-overlay"></div>

        <div class="overlay-text">
          <%= project.title %>
        </div>
      </a>
    </div>
  </div>

<% end %>
